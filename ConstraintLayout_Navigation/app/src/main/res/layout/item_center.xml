<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="90dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:id="@+id/item_center_cardView"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        app:cardCornerRadius="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >
    <ImageView
        android:id="@+id/item_center_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_launcher" />
    </androidx.cardview.widget.CardView>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/item_center_text"
        android:layout_width="303dp"
        android:layout_height="55dp"
        android:gravity="top|left"
        android:text="Gamenamessssss"
        android:clickable="true"
        android:focusable="true"
        android:textStyle="bold"
        app:autoSizeMaxTextSize="20sp"
        app:autoSizeMinTextSize="10sp"
        app:autoSizeStepGranularity="2sp"
        app:autoSizeTextType="uniform"
        app:layout_constraintBottom_toBottomOf="@+id/item_center_cardView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/item_center_cardView"
        app:layout_constraintTop_toTopOf="@+id/item_center_cardView"
        app:layout_constraintVertical_bias="0.24"
        app:singleLine="true" />

    <TextView
        android:id="@+id/Center_textView_songname1"
        android:layout_width="139dp"
        android:layout_height="18dp"
        android:gravity="top| left"
        android:text="TextVieSSSSSSS"
        app:layout_constraintBottom_toBottomOf="@+id/item_center_text"
        app:layout_constraintEnd_toEndOf="@+id/item_center_text"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/item_center_text"
        app:layout_constraintTop_toTopOf="@+id/item_center_text"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/Center_textView_songname2"
        android:layout_width="113dp"
        android:layout_height="17dp"
        android:gravity="top| left"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/Center_textView_songname1"
        app:layout_constraintTop_toBottomOf="@+id/item_center_text"
        app:layout_constraintVertical_bias="0.22000003" />

    <TextView
        android:id="@+id/Center_lefttime1"
        android:layout_width="126dp"
        android:layout_height="20dp"
        android:gravity="top| left"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="@+id/Center_textView_songname1"
        app:layout_constraintStart_toEndOf="@+id/Center_textView_songname1"
        app:layout_constraintTop_toTopOf="@+id/Center_textView_songname1"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/Center_lefttime2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="top| left"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="@+id/Center_textView_songname2"
        app:layout_constraintStart_toEndOf="@+id/Center_textView_songname2"
        app:layout_constraintTop_toTopOf="@+id/Center_textView_songname2" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>

